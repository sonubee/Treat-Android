<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/profileReview">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/profileImage" />

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:layout_alignTop="@id/profileImage"
        android:id="@+id/nameProfileReview" />

    <Button
        android:layout_margin="10dp"
        android:text="Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chatButton" />

    <Button
        android:layout_margin="10dp"
        android:text="Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chatButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/removeButton" />

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#FFF"
        android:text="# Dates Completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datesCompleted"
        android:layout_below="@+id/nameProfileReview"
        android:layout_alignStart="@+id/nameProfileReview" />

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#FFF"
        android:text="Short Bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shortBioProfileReview"
        android:layout_below="@+id/datesCompleted"
        android:layout_alignStart="@+id/datesCompleted"
        android:layout_marginTop="11dp" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/com_facebook_button_background"
        android:id="@+id/imageView2"
        android:layout_height="100dp"
        android:layout_below="@+id/profileImage"
        android:layout_alignStart="@+id/profileImage" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/com_facebook_button_background"
        android:id="@+id/imageView3"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/com_facebook_button_background"
        android:id="@+id/imageView4"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/chat"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
         />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/no"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true" />


</RelativeLayout>